{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../public",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "../templates/views",
        "outDir": "dist/templates",
        "watchAssets": true
      },
      {
        "include": "../src/mailer/templates",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
