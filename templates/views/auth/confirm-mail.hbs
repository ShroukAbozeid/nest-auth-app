<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
  <main class="mdl-layout__content">
    <div class="mdl-card mdl-shadow--6dp">
      <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
        <h2 class="mdl-card__title-text">Verify your account</h2>
      </div>
      <div class="mdl-card__supporting-text">
          <span>Please confirm your mail to access the app</span>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button" href='/mailer/resend_verification_email?email={{user.email}}'>Resend Confirmation mail</a>
          </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <span class="mdl-textfield__error">{{ message }}</span>
      </div>
    </div>
  </main>
</div>